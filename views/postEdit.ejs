<!DOCTYPE html>
<html lang="ko">
    <%- include('include/head', { title: 'What Was Today' })%>
    <body>
        <%- include('include/header')%>
        <div class="postEdit">
            <h2>What Was Today</h2>
            <form action="">
                <div>
                    <input type="text" name="" id="" placeholder="제목" />
                    <textarea
                        name=""
                        id=""
                        cols="30"
                        rows="10"
                        placeholder="내용을 입력해주세요"
                    ></textarea>
                    <input type="file" name="" id="" placeholder="사진을 올려주세요" />
                    <input type="text" id="zip-code" placeholder="우편번호" />
                    <input type="button" onclick="execDaumPostcode()" value="우편번호 찾기" />
                    <input
                        type="text"
                        id="address-1"
                        placeholder="도로명주소"
                        style="width: 500px"
                    />
                    <input type="text" id="address-2" placeholder="상세주소" style="width: 500px" />
                    <button type="button">+</button>
                </div>
            </form>
            <button type="button">Would you like to post?</button>
        </div>
        <script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
        <script>
            function execDaumPostcode() {
                new daum.Postcode({
                    oncomplete: function (data) {
                        document.getElementById("zip-code").value = data.zonecode;
                        document.getElementById("address-1").value = data.address;
                    },
                }).open();
            }
        </script>
    </body>
</html>
